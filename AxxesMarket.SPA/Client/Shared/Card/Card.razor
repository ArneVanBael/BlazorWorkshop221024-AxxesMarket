@inject Translator Translator

<div class="card @Class">
    @if (!string.IsNullOrWhiteSpace(ImageUrl))
    {
        <img src=@ImageUrl class="card-img-top">
    }
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <h5 class="card-title">@Title <span class="text-primary">€@Price</span></h5>
        }

        @if (!string.IsNullOrWhiteSpace(Description))
        {
            <p class="card-text">@Description</p>
        }

        @if(Sold) {
            <button class="btn-primary btn">@Translator["Sold"]</button>
        } else {
            <button @onclick=@(async () => await OnButtonClick.InvokeAsync(Id)) class="btn-primary btn">@ButtonText</button>
        }

    </div>
</div>

    @code {
    [Parameter]
    public string? ImageUrl { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [Parameter]
    public Guid Id { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? ButtonText { get; set; }

    [Parameter]
    public double Price { get; set; }

    [Parameter]
    public bool Sold { get; set; }

    [Parameter]
    public EventCallback<Guid> OnButtonClick { get; set; }
}
